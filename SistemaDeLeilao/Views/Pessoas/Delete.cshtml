@model SistemaDeLeilao.Models.Pessoas

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h4>Tem certeza que quer deletar?</h4>
<div>
    <h4>Pessoa: @Model.Nome | Idade: @Model.Idade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PessoasID" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning text-white">Voltar</a>
    </form>
</div>
