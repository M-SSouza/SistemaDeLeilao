@model IEnumerable<SistemaDeLeilao.Models.Lances>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem de lances</h1>

<div class="row">
    <div class="col text-center"><a type="button" asp-controller="Lances" asp-action="Create" class="btn btn-primary">Realizar novo lance</a></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PessoasID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutosID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PessoasID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutosID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LancesID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LancesID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LancesID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
