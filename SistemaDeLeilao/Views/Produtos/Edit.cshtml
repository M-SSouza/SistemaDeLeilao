@model SistemaDeLeilao.Models.Produtos

@{
    ViewData["Title"] = "Edit";
    <script src="~/lib/jquery-maskmoney/jquery.maskMoney.min.js"></script>
}

<h1>Editar produto</h1>

<h4>Produto: @Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutosID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">R$:</span>
                    </div>
                    <input class="form-control" asp-for="Valor" id="money">
                </div>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning text-white">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/js/complemento.js"></script>
}